{
  "name": "alex-patterson-webdev/arp-tennis-game",
  "description": "Simple Tennis score calculator",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.1"
  },
  "autoload": {
    "psr-4": {
      "Arp\\TennisGame\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\TennisGame\\": "test/phpunit/"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
